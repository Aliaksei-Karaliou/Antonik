function banner () {

	var image = new Array();
	var alt = new Array();
	var url = new Array();
	var type = new Array();

	image[0] = '<a href="http://help-hrodna.info"><img src="http://i100.photobucket.com/albums/m22/hrodna/help_banner.gif"></a>';
	alt[0] = '';
	url[0] = '';
	type[0] = 'flash';

	image[1] = 'ss_gr.gif';
	alt[1] = '—аша i —€рожа';
	url[1] = 'http://gazetaby.com/index.php?sn_arx=1&sn_cat=49';
	type[1] = 'gif';

	image[2] = '468x60_remonter.gif';
	alt[2] = 'ƒетали дл€ ремонта мобильных телефонов';
	url[2] = 'http://mobile.remonter.net/';
	type[2] = 'gif';

	image[3] = '468x60_impulse.gif';
	alt[3] = '–екламное агентство »мпульс';
	url[3] = '';
	type[3] = 'gif';

	var total_images = 4;
	var i = top_rand_number(total_images);

	if (type[i] != 'flash') 
	{
		document.write ('<a href="'+url[i]+'" target="_blank"><img src="http://forum.grodno.net/Images/banners/'+image[i]+'" width="480" height="60" border=0 alt='+alt[i]+'></a>')
	} 
	else 
	{
		document.write (image[i])
	}

}

function top_rand_number(n)
{
	var x;
	x=Math.round(Math.random()*100);
	x%=n;
	return x;
}
